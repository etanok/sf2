{% extends "AutoformationBlogBundle::layout.html.twig" %}
{% block title %}
    Accueil - {{ parent() }}
{% endblock %}
{% block autoformation_blog_body %}
    <h2>Liste des articles</h2>
    <ul>
        {% for article in articles %}
            <li>
                <a href="{{ path('autoformation_blog_voir', {'id': article.id}) }}">{{ article.titre }}</a>
                par {{ article.auteur }},
                le {{ article.date|date('d/m/Y') }}
            </li>
        {% else %}
            <li>Pas (encore !) d'articles</li>
        {% endfor %}
    </ul>
    <div class="pagination">
        <ul>
            {% for p in range(1, nombrePage) %}
            <li {% if p == page %} class="active" {% endif %}>
            <a href="{{ path('autoformation_blog_accueil', {'page':p}) }}">
                {{ p }}
            </a>
            </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}